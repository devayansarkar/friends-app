<div class="jumbotron">
    <p class="name">
        <%= @friend.first_name %>

        <%= @friend.last_name %>
    </p>

    <p>
        <strong>Email:</strong>
        <%= @friend.email %>
    </p>

    <p>
        <strong>Phone:</strong>
        <%= @friend.phone %>
    </p>

    <p>
        <strong>Twitter:</strong>
        <%= @friend.twitter %>
    </p>

    <%= link_to 'Edit', edit_friend_path(@friend) , class:'btn btn-warning'%> |
    <%= link_to 'Back', friends_path, class:'btn btn-info' %>
</div>